FROM python:3.13.0b1-slim 

RUN apt-get update && apt-get install -y curl apt-transport-https gnupg2

RUN curl -LO "https://dl.k8s.io/release/v1.23.0/bin/linux/amd64/kubectl" \
    && install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl

RUN pip install Flask

#RUN mkdir -p /app

WORKDIR /app

COPY run.py .

ENV APP_DIRS="/DSL"
RUN mkdir -p $APP_DIRS

COPY CronManager /DSL

LABEL org.opencontainers.image.description Docker PRE-ALPHA image for Buerokratt-DSL CronManager

CMD ["python", "run.py"]
